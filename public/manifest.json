  "screenshots": [
    {
      "src": "/screenshots/desktop-1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "World map view with continent navigation"
    },
    {
      "src": "/screenshots/mobile-1.png",
      "sizes": "390x844",
      "type": "image/png",
      "platform": "narrow",
      "label": "Mobile map interface with country details"
    }
  ],
  "shortcuts": [
    {
      "name": "World View",
      "short_name": "World",
      "description": "View the complete world map",
      "url": "/?continent=all",
      "icons": [
        {
          "src": "/icons/shortcut-world.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Search Countries",
      "short_name": "Search",
      "description": "Search for countries and regions",
      "url": "/?search=true",
      "icons": [
        {
          "src": "/icons/shortcut-search.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "application/geo+json": [".geojson"],
        "application/json": [".json"]
      },
      "launch_type": "single-client"
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "geo",
      "url": "/?coords=%s"
    }
  ],
  "share_target": {
    "action": "/",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  }
}
